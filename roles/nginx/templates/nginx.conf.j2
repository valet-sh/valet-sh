{{ ansible_managed | comment }}

user {{ current_user }} {{ current_group }};
worker_processes auto;
pid {{ nginx_pid_path }};
include {{ valet_sh_prefix }}/etc/nginx/modules-enabled/*.conf;

events {
    worker_connections 768;
}

http {
    sendfile on;

    tcp_nopush on;
    tcp_nodelay on;

    keepalive_timeout 65;
    types_hash_max_size 2048;
    server_tokens off;

    client_max_body_size 128M;

    include {{ valet_sh_prefix }}/etc/nginx/mime.types;
    default_type application/octet-stream;

    http2 on;
    ssl_session_cache  shared:SSL:10m;
    ssl_session_timeout  5m;
    ssl_protocols TLSv1.1 TLSv1.2;
    ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH";
    ssl_ecdh_curve secp384r1;
    ssl_session_cache shared:SSL:10m;
    ssl_session_tickets off;
    ssl_prefer_server_ciphers on;
    ssl_dhparam {{ nginx_dhparams_file }};

    access_log {{ valet_sh_prefix }}/var/log/nginx/access.log;
    error_log {{ valet_sh_prefix }}/var/log/nginx/error.log;

    gzip on;
    gzip_disable "msie6";
    gzip_vary on;
    gzip_comp_level 8;
    gzip_min_length  1100;
    gzip_buffers 16 8k;
    gzip_proxied any;
    gzip_http_version 1.1;
    gzip_types  text/plain
                application/xml
                text/css
                text/js
                text/xml
                application/x-javascript
                text/javascript
                application/json
                application/xml+rss
                image/svg+xml
                application/javascript;

{% for (vsh_packages_item_key,vsh_packages_item_value) in vsh_packages.items() %}
{% if vsh_packages_item_value.family == "php" %}
    upstream {{ vsh_packages_item_key }} {
        server unix:{{ vsh_packages_item_value.unix_path }};
    }
{% endif %}
{% endfor %}

    include {{ valet_sh_prefix }}/etc/nginx/conf.d/*.conf;
}

stream {
    include {{ valet_sh_prefix }}/etc/nginx/stream.d/*.conf;
}

