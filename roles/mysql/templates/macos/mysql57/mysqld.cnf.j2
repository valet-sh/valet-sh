[mysqld_safe]
socket =
nice		= 0

[mysqld]

socket =

bind-address    = 127.0.0.1
port		    = 3307
basedir		    = /usr/local/opt/vsh-mysql57/libexec
datadir		    = /usr/local/var/vsh-mysql57
tmpdir		    = /tmp
lc-messages-dir	= /usr/local/opt/vsh-mysql57/libexec/share
skip-external-locking

key_buffer_size		= 16M
max_allowed_packet	= 256M
thread_stack		= 192K
thread_cache_size       = 8
myisam-recover-options  = BACKUP
max_connections        = 200
log_error = /usr/local/var/log/vsh-mysql57/error.log
max_binlog_size   = 100M

character-set-server='utf8mb4'
collation-server='utf8mb4_unicode_ci'
innodb_file_per_table='1'
innodb_flush_log_at_trx_commit='2'
sql-mode=''
default-time-zone = '+00:00'
table_open_cache=250
join_buffer_size = 32M
tmp_table_size = 64M
max_heap_table_size = 64M
join_buffer_size=2M